{% extends 'admin/base.html.twig' %}
{% set  title ='代理商'  %}
{% block content %}
<div class="table-responsive">
    <table class="table">        
        <thead>
            <tr>
               <th>手机号</th>
               <th>创建时间</th>
               <th>最后登录</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %} 
            <tr>
                <td><a href="tel:{{ user.mobile }}">{{ user.username }} </a>
                </td>
                <td>{{ user.created ? user.created|date('Y-m-d') : '' }}</td>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                <td><a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-info btn-sm">备注</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">无记录</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">{{ knp_pagination_render(users) }}</div>
</div>
{% endblock %}