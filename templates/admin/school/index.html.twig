{% extends 'admin/base.html.twig' %}

{% set  title ='我的学校(校区)' %}

{% block content %}
    
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>学校(校区)</th>
                <th>代理商</th>
                <th>佣金(比例)</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% for school in schools %} 
            <tr>                
                <td>{{ school.title }}</td>
                <td><a href="tel:{{ school.agent.mobile }}">{{ school.agent.mobile }}</a></td>
                <td>{{ school.commission }}</td>
                <td>{{ school.status ? '已审核' :'待审核'}}</td>
                <td>                    
                    <a href="{{ path('admin_school_edit', {'id': school.id}) }}" class='btn btn-info btn-sm'>修改</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">还未添加学校</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    </div>
{% endblock %}
